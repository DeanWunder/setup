#!/bin/bash
grep -r '.*' | \
    grep -v '^[^:]*vendor/' | \
    grep -v '^[^:]*public/' | \
    grep -v '^[^:]*node_modules/' | \
    grep -v '^[^:]*storage/' | \
    grep -v '^[^:]*libs/' | \
    grep -v '^[^:]*\.min\.js\:' | \
    grep -v '^[^:]*\.min\.css\:' | \
    grep -i "^[^:]*:.*$@.*" | \
    grep --color=always -i "$@"
