#!/bin/bash
branch=`git branch --show-current`

# Don't add commits directly to inductiondoc/bidfood, links/dlp, links/swd
if [ "$branch" = "bidfood" ] || [ "$branch" = "dlp" ] || [ "$branch" = "swd" ]; then
    echo "Error: cannot commit to bidfood/dlp/swd package branches."
    exit 1
fi

# If currently on the master branch, swap to a branch name from
# whichever project repo is not on master.
if [ "$branch" = "master"  ]; then

    # Identify which branch is not master.
    branch=""
    for project in bai cts dlp linbeck prime rms swconnect swdeliveryv2 ; do
        project_branch=`cd $HOME/git/$project && git branch --show-current`
        if [ "$project_branch" != "master" ]; then
            branch="$project_branch"
        fi
    done

    if [ -z "$branch" ]; then
        echo "Error: cannot commit to master."
        exit 1
    fi
    gsw "$branch"
fi

if [ -z "$1" ]; then
    git commit
else
    repo=`get_project_from_current_directory`
    git commit -m "$branch $repo $@"
fi
