#!/bin/bash

# Check if command executes successfully first
php artisan route:list > /dev/null

# If success, output filtered or full results.
if [ $? -eq 0 ] && [ ! -z "$@" ]; then
    php artisan route:list --json | route_list_format | grep --color=always "$@"
else
    php artisan route:list --json | route_list_format
fi
